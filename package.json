{
  "name": "commlog",
  "description": "Commit Log as a Blog",
  "version": "1.0.0",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "bugs": {
    "url": "https://github.com/makenowjust/commlog/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "history": "^2.0.0-rc2",
    "isomorphic-fetch": "^2.1.1",
    "radium": "^0.16.2",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.0.0",
    "redux-thunk": "^1.0.0",
    "remark": "^3.2.0",
    "remark-react": "^1.1.0",
    "sanitize.css": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "csso": "^1.3.12",
    "expect": "^1.10.0",
    "gh-pages": "^0.8.0",
    "licensify": "^2.0.1",
    "mocha": "^2.3.4",
    "nock": "^5.2.1",
    "npm-run-all": "^1.2.11",
    "parcelify": "^2.1.0",
    "promise-test-helper": "^0.2.1",
    "shelljs": "^0.5.3",
    "uglify-js": "^2.4.24",
    "watchify": "^3.4.0"
  },
  "homepage": "https://github.com/makenowjust/commlog#readme",
  "license": "MIT",
  "main": "src/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makenowjust/commlog.git"
  },
  "scripts": {
    "deploy": "npm-run-all -s deploy:build deploy:upload",
    "deploy:build": "npm-run-all -s deploy:build:build -p deploy:build:minify:* -p deploy:build:rename:* ",
    "deploy:build:build": "env NODE_ENV=production browserify src/index.js -p licensify -p [ parcelify -o public/css/app.css ] -o public/js/app.js",
    "deploy:build:minify:css": "csso public/css/app.css > public/css/app.min.css",
    "deploy:build:minify:js": "uglifyjs public/js/app.js --compress --mangle --comments '/generated by licensify/' > public/js/app.min.js",
    "deploy:build:rename:css": "mv public/css/app.min.css public/css/app.css",
    "deploy:build:rename:js": "mv public/js/app.min.js public/js/app.js",
    "deploy:upload": "babel-node ./scripts/deploy.js",
    "test": "mocha --require babel-register --require babel-polyfill",
    "watch": "watchify -v -d src/index.js -p [ parcelify -wo public/css/app.css ] -o public/js/app.js"
  },
  "style": "src/style/app.css"
}
