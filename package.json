{
  "name": "commlog",
  "description": "Commit Log as a Blog",
  "version": "1.0.0",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "babel": {
    "stage": 0
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "bugs": {
    "url": "https://github.com/makenowjust/commlog/issues"
  },
  "dependencies": {
    "history": "^1.9.1",
    "isomorphic-fetch": "^2.1.1",
    "mdast-react-component": "^1.0.1",
    "radium": "^0.14.1",
    "react": "^0.13.3",
    "react-redux": "^2.1.2",
    "react-router": "^1.0.0-rc1",
    "redux": "^3.0.0",
    "sanitize.css": "^2.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "csso": "^1.3.12",
    "expect": "^1.10.0",
    "gh-pages": "^0.4.0",
    "licensify": "^2.0.1",
    "mocha": "^2.3.2",
    "nock": "^2.12.0",
    "npm-run-all": "^1.2.11",
    "parcelify": "^2.1.0",
    "promise-test-helper": "^0.2.1",
    "redux-thunk": "^1.0.0",
    "shelljs": "^0.5.3",
    "snazzy": "^2.0.1",
    "standard": "^5.3.1",
    "uglify-js": "^2.4.24",
    "watchify": "^3.4.0"
  },
  "homepage": "https://github.com/makenowjust/commlog#readme",
  "license": "MIT",
  "main": "src/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makenowjust/commlog.git"
  },
  "scripts": {
    "deploy": "npm-run-all -s deploy:build -p deploy:minify:* -p deploy:rename:* -s deploy:upload",
    "deploy:build": "env NODE_ENV=production browserify src/index.js -p licensify -p [ parcelify -o public/css/app.css ] -o public/js/app.js",
    "deploy:minify:css": "csso public/css/app.css > public/css/app.min.css",
    "deploy:minify:js": "uglifyjs public/js/app.js --compress --mangle --comments '/generated by licensify/' > public/js/app.min.js",
    "deploy:rename:css": "mv public/css/app.min.css public/css/app.css",
    "deploy:rename:js": "mv public/js/app.min.js public/js/app.js",
    "deploy:upload": "babel-node ./scripts/deploy.js",
    "test": "npm-run-all -s test:lint test:test",
    "test:lint": "standard --verbose | snazzy",
    "test:test": "mocha --compilers js:babel/register",
    "watch": "watchify -v -d src/index.js -p [ parcelify -wo public/css/app.css ] -o public/js/app.js"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "public/"
    ]
  },
  "style": "src/style/app.css"
}
